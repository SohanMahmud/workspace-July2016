package fortuneTeller;

import java.util.Scanner;

public class RunCalc {

	public static void main(String[] args) {
		Scanner num = new Scanner (System.in);
		Calculator value = new Calculator();
		String count;
while (1==1) {
	System.out.println("Enter from 2 upto 5 integers to add, Start by typing in the number of integers you will use: 2,3,4, or 5");
	count = num.next();
	
	if (count.equals("2")); {
		int total1 = value.Calculate(num.nextInt(), num.nextInt());
		System.out.println("Your total is: " +total1);break;}
	
		if (count.equals("3")); {	
		int total2 = value.Calculate(num.nextInt(), num.nextInt(), num.nextInt());
		System.out.println("Your total is: " +total2);break;}
		
	 if (count.equals("2"));{
		int total3 = value.Calculate(num.nextInt(), num.nextInt(), num.nextInt(), num.nextInt());
		System.out.println("Your total is: "+total3);break;}
		
		int total4 = value.Calculate(num.nextInt(), num.nextInt(), num.nextInt(), num.nextInt(), num.nextInt());
		System.out.println("Your total is: "+total4);
		
	}
	}
}
